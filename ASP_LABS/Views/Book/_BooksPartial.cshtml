@{
	var request = ViewContext.HttpContext.Request;
	var returnUrl = request.Path + request.QueryString.ToUriComponent();
	
}

<!-- Карточки -->
<div class="row">
	@foreach (var element in Model.Items)
	{
		<div class="col-md-4 g-5">
			<div class="card" style="width: 18rem;">
				<img src="@element.ImagePath" class="card-img-top" alt="...">

				<div class="card-body">
					<h5 class="card-title">@element.Title</h5>
					<p class="card-text">@element.Description</p>
					<small class="card-text">Цена: @element.Price</small>
					<div class="row">
						<div class="col-md-4"></div>
						<div class="col-md-4">
							<a asp-controller="Cart" asp-action="Add" asp-route-id="@element.Id" asp-route-returnurl="@returnUrl" class="btn btn-primary">Купить</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>




<pager current-page="@Model.CurrentPage"
	   max-pages="@Model.TotalPages"
	   genre="@ViewContext.RouteData.Values["genre"]"
	   admin="false"></pager>

